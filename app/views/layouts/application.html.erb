<!DOCTYPE html>
<html>
  <head>
    <title>Trackie</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <header>
      <a href=<%= projects_path %> class="logo">trackie</a>

      <% if @current_user.present?%>
        <a href=<%= users_path %> class="user-link"><%= image_tag @current_user.profile_pic, class: "profile-pic-med " %></a>
        <%= link_to 'Logout', login_path, method: 'delete' %>
        <% else %>
        <%= link_to 'Login', login_path %>
        <%= link_to 'Sign Up', new_user_path %>
        
      <% end%>
    </header>

    <%= yield %>
  
    <footer>

      <nav>
        <%= link_to (image_tag 'project_icon', class: "nav-link-img"), projects_path %>
        <%= link_to (image_tag 'task_icon', class: "nav-link-img"), tasks_path %>
        <%= link_to 'users', users_path %>
        <%= link_to 'skills', skills_path %>
      </nav>
    </footer>
  </body>
</html>

