<h1>
<%= link_to "#{@task.project.title}", project_path(@task.project.id) %>
</h1>
<h2><%= @task.title %></h2>
<%= link_to 'Edit', edit_task_path(@task.id) %>
<%= link_to 'Delete', task_path(@task.id), method: "delete" %>

<div>
<div>
  <% if @task.user %>
    <%= link_to cl_image_tag(@task.user.profile_pic, width: 100, height: 100, crop: 'fill', class: "profile-pic-small"), user_path(@task.user.id), title: "#{@task.user.username}" %>
  <% else %>
    <%= button_tag 'unassgned'  %>
  <% end %>
  </div>
  <div>Priority: <%= @task.priority %></div>
  <div>Due: <%= @task.due_date %></div>
  <div>Status: <%= @task.status %></div>
</div>

<p><%= @task.description %></p>

