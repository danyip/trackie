<div class="user-show-wrapper">

<h2><%= @user.first_name%> <%= @user.last_name%> </h2>

<%= link_to 'Delete', user_path(@user.id), method: 'delete' %>
<%= link_to 'Edit', edit_user_path(@user.id) %>

<%= cl_image_tag @user.profile_pic, width: 100, height: 100, crop: 'fill', class: "profile-pic-large" %>

<p><strong>Username: </strong> <%= @user.username %></p>
<p>Skills: 
<%=@user.skills.pluck(:skill_type).join ", "%>

</p>
<p><strong>Email: </strong> <%= @user.email %></p>


<article class="user-info-box">

  <%= cl_image_tag @user.profile_pic, width: 100, height: 100, crop: 'fill', class: "user-image large-pic" %>
  <h4><%= @user.first_name%> <%= @user.last_name%></h4>
  <p><em><%= @user.username %></em></p>
  <div class="proj-count"><strong>Projects: </strong><%= @user.projects.count %></div>
  <div class="task-count"><strong>Tasks: </strong><%= @user.tasks.count %></div>
  <div class="join-date"><strong>Joined: </strong><%= @user.created_at.strftime("%b %Y") %></div>


</article>
</div>

