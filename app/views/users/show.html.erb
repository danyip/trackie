<div class="page-wrapper">

<h2><%= @user.first_name%> <%= @user.last_name%> </h2>

<%= link_to 'Delete', user_path(@user.id), method: 'delete' %>
<%= link_to 'Edit', edit_user_path(@user.id) %>

<%= cl_image_tag @current_user.profile_pic, width: 100, height: 100, crop: 'fill', class: "profile-pic-large" %>

<p><strong>Username: </strong> <%= @user.username %></p>
<p>Skills: 
<%=@user.skills.pluck(:skill_type).join ", "%>

</p>
<p><strong>Email: </strong> <%= @user.email %></p>

<section class="list-container">
  <h3><%= @user.username %>'s projects</h3>
  <ul>
    <% @user.projects.each do |project| %>
      <li>
        <%= link_to "#{project.title}", project_path(project.id) %>
        
        <ul>
        <% project.tasks.each do |task|%>
          <% if task.user_id == @user.id%>
            <li>
              <%= link_to "#{task.title}", task_path(task.id) %>
            </li>
          <% end %>
        <% end %>
        </ul>

      </li>    
    <% end %>
  </ul>
</section>

</div>
