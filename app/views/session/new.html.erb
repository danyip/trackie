<div id="login-page-wrapper">


  <h1>Login</h1>

  <% if flash[:error] %>
      <h3 class="error-message"><%= flash[:error] %></h3>
  <% end %>

  <%= form_with url: login_path, local: true do |f| %>

    <div>
      <%= f.label :email %>
      <br>
      <%= f.text_field :email %>
    </div>
    <br>
    <div>
    <%= f.label :password %>
    <br>
    <%= f.password_field :password %>
    </div>
    <br>
    <%= f.submit 'Login' %>
  <% end %>

</div>